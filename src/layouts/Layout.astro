---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/clubia.jpg" />
    <meta name="generator" content={Astro.generator} />
    <title data-i18n-key="meta.title">Uleam Tech Fest</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;500;700&display=swap"
      rel="stylesheet"
    />

    <!-- ClientRouter enables Astro's View Transitions for internal navigation -->
    <ClientRouter />
  </head>
  <body class="min-h-screen flex items-center justify-center p-4 rounded-t-lg">
    <div class="w-full max-w-2xl mx-auto container-card">
      <div class="window-bar" id="app-window-bar">
        <div class="window-controls">
          <div class="dot red"></div>
          <div class="dot yellow"></div>
          <div class="dot green"></div>
        </div>
        <p
          class="text-center text-sm text-muted flex-grow"
          data-i18n-key="window.title"
        >
          uleam_tech_fest.js
        </p>
        <div class="ml-2">
          <select
            id="lang-select"
            aria-label="Language selector"
            class="bg-transparent text-sm text-muted"
          >
            <option value="en" data-i18n-key="language.english">EN</option>
            <option value="es" data-i18n-key="language.spanish">ES</option>
          </select>
          <button
            id="theme-toggle"
            aria-label="Toggle theme"
            class="ml-2 px-2 py-1 text-sm">ðŸŒ™</button
          >
        </div>
      </div>
      <main id="app-content" class="rounded-b-lg shadow-2xl surface-border">
        <slot />
      </main>
    </div>
    <script src="/js/i18n-client.js" is:inline></script>
    <script src="/js/theme-client.js" is:inline></script>
  </body>
</html>
