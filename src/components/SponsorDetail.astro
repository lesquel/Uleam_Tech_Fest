---
import { fade } from "astro:transitions";
const { sponsor } = Astro.props;
---

<article
  transition:animate={fade()}
  class="w-full max-w-3xl mx-auto bg-surface rounded-lg shadow-2xl p-6 md:p-10 surface-border"
>
  <header class="flex items-center gap-6 mb-6">
    <img
      src={sponsor.image}
      alt={sponsor.name}
      class="w-20 h-20 rounded-full object-cover"
    />
    <div>
  <h1 class="text-2xl font-bold text-primary">{sponsor.name}</h1>
    </div>
  </header>

  <section class="prose text-gray-200">
    <p>{sponsor.description}</p>
  </section>

  <footer class="mt-6 text-sm text-muted">
    <a href="/" class="text-accent" data-i18n-key="back">‚Üê Volver</a>
  </footer>
</article>
