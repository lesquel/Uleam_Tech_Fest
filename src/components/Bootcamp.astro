---
import { fade } from "astro:transitions";
import SpeakersList from "./SpeakersList.astro";
const { bootcamp, event } = Astro.props;
---

<article
  transition:animate={fade()}
  class="w-full max-w-3xl mx-auto bg-surface rounded-lg shadow-2xl p-6 md:p-10 surface-border"
>
  <header class="mb-6">
    <div>
      <h1 class="text-2xl font-bold text-primary">{bootcamp?.title}</h1>
      {
        bootcamp?.subtitle ? (
          <p class="text-accent font-semibold mt-2">{bootcamp.subtitle}</p>
        ) : null
      }
    </div>
  </header>

  <section class="prose text-primary">
    <p>{bootcamp?.description}</p>
    {
      bootcamp?.details ? (
        <div class="mt-4">
          <h3 class="text-accent font-semibold mb-2">Detalles del evento</h3>
          <ul>
            {bootcamp.details.map((d: any) => (
              <li>{d}</li>
            ))}
          </ul>
        </div>
      ) : null
    }
  </section>

  <p>
    <span class="command" data-i18n-key="speakers.label">&gt; speakers:</span>
  </p>
  <div class="pl-4">
    <SpeakersList speakers={event.speakers} />
  </div>

  <footer class="mt-6 text-sm text-muted">
    <a href="/" class="text-accent" data-i18n-key="back">‚Üê Volver</a>
  </footer>
</article>
