---
import { fade } from "astro:transitions";
import SponsorsList from "./SponsorsList.astro";
const { hackathon, event } = Astro.props;
---

<article
  transition:animate={fade()}
  class="w-full max-w-3xl mx-auto bg-surface rounded-lg shadow-2xl p-6 md:p-10 surface-border"
>
  <header class="mb-6">
    <div>
      <h1 class="text-2xl font-bold text-primary">{hackathon?.title}</h1>
      {
        hackathon?.subtitle ? (
          <p class="text-accent font-semibold mt-2">{hackathon.subtitle}</p>
        ) : null
      }
    </div>
  </header>

  <section class="prose text-primary">
    <p>{hackathon?.description}</p>
    {
      hackathon?.details ? (
        <div class="mt-4">
          <h3 class="text-accent font-semibold mb-2">Detalles del evento</h3>
          <ul>
            {hackathon.details.map((d: any) => (
              <li>{d}</li>
            ))}
          </ul>
        </div>
      ) : null
    }
    {
      hackathon?.prizes ? (
        <div class="mt-4">
          <h3 class="text-accent font-semibold mb-2">Premios</h3>
          <ul>
            {hackathon.prizes.map((p: any) => (
              <li>{p}</li>
            ))}
          </ul>
        </div>
      ) : null
    }
  </section>

  <p class="mt-3">
    <span class="command" data-i18n-key="sponsors.label">&gt; sponsors:</span>
  </p>
  <div class="pl-4">
    <SponsorsList sponsors={event.sponsors} />
  </div>

  <footer class="mt-6 text-sm text-muted">
    <a href="/" class="text-accent" data-i18n-key="back">‚Üê Volver</a>
  </footer>
</article>
