---
import { fade } from "astro:transitions";
const { speaker } = Astro.props;
---

<article
  transition:animate={fade()}
  class="w-full max-w-3xl mx-auto bg-[#1E1E1E] rounded-lg shadow-2xl p-6 md:p-10 border border-gray-700"
>
  <header class="flex items-center gap-6 mb-6">
    <img
      src={speaker.image}
      alt={speaker.name}
      class="w-20 h-20 rounded-full object-cover"
    />
    <div>
      <h1 class="text-2xl font-bold text-white">{speaker.name}</h1>
      <p class="text-gray-400">{speaker.title} — {speaker.company}</p>
      <p class="text-accent font-semibold mt-2">
        {speaker.titleOfPresentation}
      </p>
    </div>
  </header>

  <section class="prose text-gray-200">
    <p>{speaker.description}</p>
  </section>

  <footer class="mt-6 text-sm text-gray-400">
    <a href="/" class="text-accent">← Volver</a>
  </footer>
</article>
