---
import { fade } from "astro:transitions";
const { speaker } = Astro.props;
---

<article
  transition:animate={fade()}
  class="w-full max-w-3xl mx-auto bg-surface rounded-lg shadow-2xl p-6 md:p-10 surface-border"
>
  <header class="flex items-center gap-6 mb-6">
    <img
      src={speaker.image}
      alt={speaker.name}
      class="w-20 h-20 rounded-full object-cover"
    />
    <div>
  <h1 class="text-2xl font-bold text-primary">{speaker.name}</h1>
  <p class="text-muted">{speaker.title} — {speaker.company}</p>
      <p class="text-accent font-semibold mt-2">
        {speaker.titleOfPresentation}
      </p>
    </div>
  </header>

  <section class="prose text-gray-200">
    <p>{speaker.description}</p>
  </section>

  <footer class="mt-6 text-sm text-muted">
    <a href="/" class="text-accent" data-i18n-key="back">← Volver</a>
  </footer>
</article>
